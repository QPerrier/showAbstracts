doi = {10.1088/1748-9326/10/12/125002},
file = {:Users/quentin/Documents/Mendeley Desktop/Iyer et al/Iyer et al. - 2015 - The contribution of Paris to limit global warming to 2 °C.pdf:pdf},
issn = {1748-9326},
journal = {Environmental Research Letters},
number = {12},
