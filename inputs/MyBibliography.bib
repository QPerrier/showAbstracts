doi = {10.1080/14693062.2016.1222258},
file = {:Users/quentin/Documents/Mendeley Desktop/Cohen, Tyler, Torres Gunfaus/Cohen, Tyler, Torres Gunfaus - 2016 - Lessons from co-impacts assessment under the Mitigation Action Plans and Scenarios (MAPS) Programm.pdf:pdf},
